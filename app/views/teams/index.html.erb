<div >
  <%= link_to "New Team", new_team_path, :class => "text-center btn btn-secondary mb-5" %>
</div>

<table class="table table-hover athlete-table">
  <thead class="thead-dark">
    <tr>
    <th colspan="2" scope="col">Teams</th>
    <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td colspan="2">
      <%= link_to(team) do %>
        <img src="<%= team.logo %>" width="50" height="50"> </td>
        <td><h2 class="ml-4"><%= team.name %></h2>
      <% end %>
      </td>
  <% end %>
    </tr>
  </tbody>
</table>
