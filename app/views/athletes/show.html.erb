<h1><%= @athlete.name %></h1>

<%= image_tag @athlete.photo, :class => 'feature' %>

<ul>
  <li>Name: <%= @athlete.name %></li>
  <% if @athlete.birthday.present? %>
    <li>Date of Birth: <%= @athlete.birthday.strftime '%A, %B %e, %Y' %></li>
  <% end %>

  <% if @athlete.team.present? %>
  <li>Team: <%= link_to @athlete.team.name, team_path(:id => @athlete.team.id) %></li>
  <% end %>

  <% if @athlete.belt.present? %>
  <li>Belt: <%= link_to @athlete.belt.name, belt_path(:id => @athlete.belt.id) %></li>
  <% end %>

</ul>

<% if @current_user.present? && @current_user.admin? %>
<div class="controls">
    <%= link_to 'Edit athlete', edit_athlete_path(@athlete.id) %>
  <%= link_to 'Delete athlete', athlete_path(@athlete.id), :method => 'delete' %>
</div>
<% end %>

<ul>
<% @videos.each do |video| %>
  <li>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </li>
<% end %>
</ul>
